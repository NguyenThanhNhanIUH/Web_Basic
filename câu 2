import React, { useState } from "react";
import { StyleSheet, Text, View, FlatList, TouchableOpacity } from "react-native";

type Product = {
  id: string;
  name: string;
  price: number;
};

export default function App() {
  // State lưu danh sách sản phẩm trong giỏ
  const [cart, setCart] = useState<Product[]>([]);

  // Danh sách sản phẩm mẫu
  const products: Product[] = [
    { id: "1", name: "Sản phẩm A", price: 100 },
    { id: "2", name: "Sản phẩm B", price: 200 },
    { id: "3", name: "Sản phẩm C", price: 300 },
  ];

  // Hàm thêm sản phẩm vào giỏ
  const addToCart = (product: Product) => {
    setCart([...cart, product]);
  };

  // Render 1 item sản phẩm
  const renderItem = ({ item }: { item: Product }) => (
    <View style={styles.item}>
      <Text style={styles.name}>{item.name}</Text>
      <Text style={styles.price}>{item.price}₫</Text>
      <TouchableOpacity style={styles.button} onPress={() => addToCart(item)}>
        <Text style={styles.btnText}>Thêm vào giỏ</Text>
      </TouchableOpacity>
    </View>
  );

  // Tính tổng tiền trong giỏ
  const totalPrice = cart.reduce((sum, item) => sum + item.price, 0);

  return (
    <View style={styles.container}>
      {/* Hiển thị số lượng + tổng tiền */}
      <Text style={styles.cartInfo}>
        Giỏ hàng: {cart.length} sản phẩm - Tổng: {totalPrice}₫
      </Text>

      {/* Hiển thị danh sách sản phẩm */}
      <FlatList
        data={products}
        keyExtractor={(item) => item.id}
        renderItem={renderItem}
      />
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    padding: 20,
    backgroundColor: "#fff",
  },
  cartInfo: {
    fontSize: 18,
    fontWeight: "bold",
    marginBottom: 15,
  },
  item: {
    padding: 15,
    borderBottomWidth: 1,
    borderColor: "#ccc",
  },
  name: {
    fontSize: 18,
    fontWeight: "bold",
  },
  price: {
    fontSize: 16,
    color: "green",
    marginBottom: 5,
  },
  button: {
    backgroundColor: "#007bff",
    padding: 8,
    borderRadius: 5,
    alignItems: "center",
  },
  btnText: {
    color: "#fff",
  },
});